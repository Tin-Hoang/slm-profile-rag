# Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME="Profile Chatbot"
APP_PORT=7860
DEBUG=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_HOST=http://localhost:11434

# Optional: API Keys for alternative LLM providers
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API Key (get free key at https://console.groq.com)
# If set, Groq will be used as the default LLM provider instead of Ollama
GROQ_API_KEY=

# Vector Database
CHROMA_PERSIST_DIR=./chroma_db

# Document Processing
DOCUMENTS_DIR=./data/documents

# Logging
LOG_LEVEL=INFO

# Hugging Face Spaces specific (optional)
# These are automatically set by HF Spaces
# SPACE_ID=your_space_id
# SPACE_AUTHOR_NAME=your_username
